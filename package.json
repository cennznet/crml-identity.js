{
    "name": "@cennznet/identity",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "npx tslint -c tslint.json --project . && npx prettier --list-different './packages/**/src/*.ts'",
        "build": "plugnet-dev-build-ts",
        "test": "jest -c ./jest/jest.config.js --passWithNoTests --coverage spec",
        "test:e2e": "jest --runInBand --detectOpenHandles -c ./jest/jest.config.js e2e",
        "test:e2eDebug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --no-cache --forceExit --detectOpenHandles -c ./jest/jest.config.js e2e"
    },
    "devDependencies": {
        "@plugnet/dev": "^0.30.4",
        "@types/jest": "^24.0.9",
        "cz-lerna-changelog": "^2.0.2",
        "husky": "^1.1.1",
        "jest": "24.1.0",
        "jest-environment-node": "^24.0.0",
        "lerna": "^3.13.1",
        "prettier": "^1.13.5",
        "ts-jest": "^24.0.0",
        "tslint": "^5.13.1",
        "tslint-microsoft-contrib": "^6.0.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "prettier --write 'packages/**/src/**/*'"
        }
    }
}
